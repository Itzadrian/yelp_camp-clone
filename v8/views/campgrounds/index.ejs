<%- include('../partials/header')  %>
<div class="container">
    <header class="bg-light p-5 rounded-lg m-3">
        <h1 class="display-1">Welcome To YelpCamp</h1>
        <p>View All Our Hand Picked Camp Grounds From Around The World</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
        </p>
    </header>
    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                        <img class="card-img-top" src="<%= campground.image %>" alt="">
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.name %></h4>
                        <p><a href="/campgrounds/ <%= campground._id %>" class="btn btn-primary">More Info</a></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer')  %>