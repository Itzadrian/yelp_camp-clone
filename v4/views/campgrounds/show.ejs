<%- include('../partials/header')  %>
<h1><%= campground.name %></h1>

<img src="<%= campground.image %>" alt="" srcset="">
<p><%= campground.description %></p>

<p><a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-outline-success">Add New Comment</a></p>

<% campground.comments.forEach(function(comments){ %>
    <p>
        <strong><%= comments.author %></strong> - <%= comments.text %>
    </p>
<% }) %>

<%- include('../partials/footer')  %>